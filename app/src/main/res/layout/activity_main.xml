<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fon"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txt_one"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:text="Вход"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/txt_tho"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="250sp"
        android:text="Добро пожаловать!"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@id/txt_one"
        app:layout_constraintStart_toStartOf="@+id/txt_one"
        app:layout_constraintTop_toBottomOf="@+id/txt_one"

        />

    <TextView
        android:id="@+id/txt_three"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Выполните вход или зарегиструетесь "
        android:textColor="@color/white"
        android:textSize="16sp"
        android:textStyle="normal"
        app:layout_constraintEnd_toEndOf="@+id/txt_tho"
        app:layout_constraintStart_toStartOf="@+id/txt_tho"
        app:layout_constraintTop_toBottomOf="@+id/txt_tho" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="40sp"
        android:layout_marginVertical="80dp"
        android:orientation="vertical"
        android:id="@+id/edt_txt"
        app:layout_constraintTop_toBottomOf="@+id/txt_three">

        <EditText
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:background="@drawable/ed_text"
            android:hint="Введите вашу почту"
            android:textColor="@color/txt_black"
            android:textSize="16sp"
            android:paddingStart="8dp"
            android:id="@+id/edt_one"
            />

        <EditText
            android:paddingStart="8dp"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:hint="Введите пароль"
            android:textColor="@color/txt_black"
            android:textSize="16sp"
            android:background="@drawable/ed_text"
            android:id="@+id/edt_tho"
            />

    </LinearLayout>
    <com.google.android.material.button.MaterialButton
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Войти"
        app:cornerRadius="6dp"
        app:layout_constraintTop_toBottomOf="@id/edt_txt"
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="40dp"
        android:backgroundTint="@color/grey"
        android:id="@+id/bt_button"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Забыли пароль?"
        android:layout_marginTop="24dp"
        android:textColor="@color/white"
        android:id="@+id/txt_who"
        android:layout_marginStart="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/bt_button"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Нажмите сюда."
        android:layout_marginTop="24dp"
        android:textColor="@color/orange"
        android:layout_marginStart="12dp"
        app:layout_constraintTop_toBottomOf="@id/bt_button"
        app:layout_constraintStart_toEndOf="@id/txt_who"
        android:id="@+id/txt_fif"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
